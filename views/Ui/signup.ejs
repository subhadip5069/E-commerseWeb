    <!-- Sign Up Section -->
    <div class="col-md-6 p-4 rounded shadow-sm" style="background-color: rgb(0, 0, 0); padding: 20px; border-radius: 20px;">
      <form action="/auth/signup" method="POST">
        <h2 class="text-center mb-4 text-white">Sign Up</h2>
        <div class="mb-3">
          <label for="username" class="form-label text-white">Full Name</label>
          <input type="text" class="form-control" id="username" name="username" placeholder="Enter your full name" required>
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label text-white">Phone Number</label>
          <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" required>
        </div>
        <div class="mb-3">
          <label for="emailSignup" class="form-label text-white">Email</label>
          <input type="email" class="form-control" id="emailSignup" name="email" placeholder="Enter your email" required>
        </div>
        <div class="mb-3">
          <label for="passwordSignup" class="form-label text-white">Password</label>
          <input type="password" class="form-control" id="passwordSignup" name="password" placeholder="Enter your password" required>
        </div>
        <div class="d-grid">
