 <!-- Display success message if exists -->


  <div id="mainContent" class="container-fluid">
    <!-- Display success message if exists -->
  
    <div class="container mt-5">
      <div class="container mt-5 rounded bg-light p-4">
        
        <h1 class="text-center">User Management</h1>
        <div class="collapse alert alert-success" id="collapseExample">
          <div class="card card-body" style="background-color: transparent; color:green; border: none; text-align: center;">
            <h5 class="card-title " > User Updated successfully</h5>
          </div>
        </div>
      
       
        <!-- Search Form -->
        <form method="GET" action="/admin/user" class="mb-4">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Search by Username" value="<%= searchQuery || '' %>">
            </div>
            <button type="submit" class="btn btn-primary mt-2">Search</button>
        </form>
    
        <!-- Users Table -->
        <% if (users.length > 0) { %>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                       
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td>
                                <!-- Switch for updating user status -->
                                <div class="form-check form-switch">
                                  <input class="form-check-input status-switch" name="status" type="checkbox" role="switch" id="statusSwitch<%= user._id %>" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample"
                                      data-user-id="<%= user._id %>" <%= user.status === 'active' ? 'checked' : '' %>>
                                  <label class="form-check-label" for="statusSwitch<%= user._id %>">
                                      <%= user.status === 'active' ? 'Active' : 'Inactive' %>
                                  </label>
                              </div>
                              
                            </td>
                            
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info">
                No users found.
            </div>
        <% } %>
    
        <!-- Pagination Controls -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/admin/user?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="btn btn-secondary btn-sm">Previous</a>
            <% } %>
    
            <% for (let i = 1; i <= totalPages; i++) { %>
                <a href="/admin/user?page=<%= i %>&limit=<%= limit %>" 
                   class="btn btn-sm <%= currentPage === i ? 'btn-info' : 'btn-outline-info' %>">
                   <%= i %>
                </a>
            <% } %>
    
            <% if (currentPage < totalPages) { %>
                <a href="/admin/user?page=<%= currentPage + 1 %>&limit=<%= limit %>" class="btn btn-secondary btn-sm">Next</a>
            <% } %>
        </div>
    
        <a href="/admin/user" class="btn btn-secondary mt-3">Back to All Users</a>
    </div>
    
    
