<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // JavaScript for handling the switch toggle and sending AJAX request
    $(document).ready(function() {
        $('.status-switch').change(function() {
            const userId = $(this).data('user-id'); // Get user ID from the data attribute
            const status = $(this).prop('checked') ? 'active' : 'inactive'; // Determine the new status

            // Send the update request via AJAX
            $.ajax({
                url: '/admin/user/status/' + userId,
                method: 'POST',
                data: {
                    status: status
                },
                success: function(response) {
                    // You can handle success response here if needed
                    alert('User status updated successfully');
                },
                error: function(error) {
                    // Handle error
                    alert('Error updating user status');
                    console.error(error);
                }
            });
        });
    });
</script>
